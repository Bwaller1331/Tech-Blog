
{{#each posts as |post| }}
<div class="post text-light">
  <div class="col-md-5 text-light">
    <h2>
      <a href="/post/{{post.id}}">{{post.name}}</a>
    </h2>
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}
